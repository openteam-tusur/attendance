<div id='search_form'>
  <%= form_tag search_path, method: :get do %>
    <div class='row'>
      <div class='search-input form-group col-xs-12 col-sm-10 col-md-10 col-lg-11'>
        <%= search_field_tag :q, params[:q], placeholder: 'Поиск студента', class: 'form-control search', autofocus: true %>
      </div>

      <div class='action col-xs-12 col-sm-2 col-md-2 col-lg-1'>
        <%= submit_tag "Найти", class: 'btn btn-primary btn-block' %>
      </div>
    </div>

  <% end %>
</div>
<div class='help-block'>Например: Иванов Иван 777</div>

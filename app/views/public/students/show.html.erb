<%= content_for :page_title do %>
  <h1 class="text-center"><%= @student %></h1>
<% end %>

<div class="filters">
  <%= date_filters %>
</div>

<h2 class="text-center">Посещаемость по дням</h2>
<%= line_chart  @attendance_by_date %>

<h2 class="text-center">Посещаемость по дисциплинам</h2>
<%= bar_chart   @attendance_by_discipline %>

<h2 class="text-center">Пропуски занятий</h2>
<div class="table-responsive">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <td>Дисциплина</td>
        <td>Дата</td>
      </tr>
    </thead>
    <tbody>
      <% @omissions.each do |omission| %>
        <tr>
          <td>
            <%= omission.lesson.discipline.title %>
            <%= " (#{omission.lesson.kind_abbr})" %>
          </td>
          <td><%= I18n.l(omission.lesson.date_on)  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title><%= document_title %></title>
    <%= stylesheet_link_tag    'application', :media => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% if user_signed_in? %>
      <%= current_user.email %> |
      <%= link_to 'Выход', destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= link_to 'Вход', new_user_session_path %>
    <% end %>

    <%= render_menu(current_namespace) if current_namespace && current_namespace != :public %>

    <hr>
    <br>
    <h1><%= page_title %></h1>
    <%= yield %>
  </body>
</html>

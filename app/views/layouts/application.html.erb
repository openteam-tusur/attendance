<!DOCTYPE html>
<html>
  <head>
    <title><%= document_title %></title>
    <%= stylesheet_link_tag    'application', :media => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper">
      <%= render 'navigation' %>

      <div class='container'>
        <h1><%= page_title %></h1>
        <%= yield %>
        <%= render_navigation :context => :namespaces if user_signed_in? %>
        <%= render_menu(current_namespace) if current_namespace && current_namespace != :public %>
      </div>
    </div>

    <%= render :partial => 'footer' %>

    <%= yield :stop_ie if content_for?(:stop_ie) %>

  </body>
</html>

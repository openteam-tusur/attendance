<%= simple_form_for :filter,
                    :url => education_department_disruptions_path,
                    :html => { :class => 'form-inline', :method => :get },
                    :wrapper => :inline_form do |f| %>

                    <%= link_to 'Все', education_department_disruptions_path(params.merge(:filter => :all)) %>

                    <%= f.input :from, :input_html => { :value => @filter_params[:from] } %>
                    <%= f.input :to, :input_html => { :value => @filter_params[:to] } %>

                    <%= f.input :name, :input_html => { :value => @name || nil }, :placeholder => 'ФИО преподавателя' %>
                    <%= f.input :faculty, :as => :select, :collection => @faculties.map(&:abbr), :selected => @faculty, :include_blank => true %>
                    <%= f.input :approved, :as => :select, :collection => Realize.approved.values.map(&:text), :selected => @approved, :include_blank => true %>

                    <%= f.submit 'Искать', :class => 'btn btn-default btn-sm' %>
<% end %>

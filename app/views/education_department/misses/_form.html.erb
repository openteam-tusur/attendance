<%= simple_form_for [:education_department, @miss],
                    :html => { :class => 'form-horizontal form-miss' },
                    :wrapper => :horizontal_form do |f| %>

  <%= f.input :name, :input_html => { :class => 'lecturers_autocomplete', :value => @miss.missing.try(:info)}, :label => 'ФИО' %>
  <%= f.input :missing_id, :as => :hidden %>

  <%= f.input :starts_at,
              :as => :datetime_picker,
              :wrapper_html => { :class => 'start-miss' }, :wrapper => :horizontal_datetime_picker %>

  <%= f.input :ends_at,
              :as => :datetime_picker,
              :wrapper_html => { :class => 'end-miss' }, :wrapper => :horizontal_datetime_picker %>

  <%= f.input :note %>

  <%= f.submit 'Сохранить', :class => 'btn btn-primary btn-sm' %>
  <%= link_to 'Отмена', education_department_misses_path, :class => 'btn btn-default btn-sm' %>
<% end %>

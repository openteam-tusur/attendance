<%= content_for :main_wrapper_width, 'wide' %>
<div class="breadcrumbs">
  <ul>
    <li class='with_rarr'><%= link_to parent, [:manage, parent] %></li>
    <li><%= resource %></li>
  </ul>
</div>

<h3><%= "Группа #{@group.number}, #{@group.course} курс, #{@group.faculty.abbr}" %></h3>

<h6>Посещаемость за прошедшую неделю &mdash; <%= @group.average_attendance_from_last_week %></h6>
<h6>Посещаемость с начала семестра &mdash; <%= @group.average_attendance_from_semester_begin %></h6>
<h6><%= link_to 'Журнал посещаемости', manage_group_scoped_lessons_path(@group, :date => Time.zone.today.to_date) %></h6>

<% if (nofilled_dates = @group.nofilled_dates).any? %>
  <div class="nofilled_dates">
    <% if nofilled_dates.count < 20 %>
      Журнал посещаемости не заполнен за <%= nofilled_dates.map{|d| l(d, :format => "%d %b")}.join(', ') %>
    <% else %>
      Журнал посещаемости не заполнялся больше 20 дней!
    <% end %>
  </div>
<% end %>

<table class="group wider_block">
  <thead>
    <tr>
      <td rowspan='3'></td>
      <% @group.lessons_from_semester_begin.group_by(&:discipline).each do |discilpine, lessons| %>
        <td colspan=<%= lessons.group_by(&:kind).count*2 %> title="<%= discilpine %>" class='discipline_title'><%= discilpine.abbr %></td>
      <% end %>
    </tr>
    <tr>
      <% @group.lessons_from_semester_begin.group_by(&:discipline).each do |discilpine, lessons| %>
        <% lessons.group_by(&:kind_text).each do |kind, lessons| %>
          <td colspan='2' class='lesson <%= lessons.first.kind %>'>
            <span class='lesson_kind'><%= kind %></span>
            <span class='lecturers'><%= lessons.map(&:lecturers).flatten.uniq.join(', ') %></span>
          </td>
        <% end %>
      <% end %>
    </tr>
    <tr class='period'>
      <% @group.lessons_from_semester_begin.group_by(&:discipline).each do |discilpine, lessons| %>
        <% lessons.group_by(&:kind_text).each do |kind, lessons| %>
          <td>неделя</td>
          <td>семестр</td>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @group.students.each do |student| %>
      <tr>
        <td class='student'>
          <span class='fio'><%= student %></span>
          <span class='student_aaflwb'><%= student.average_attendance_from_last_week %></span>/<span class='student_aafsb'><%= student.average_attendance_from_semester_begin %></span>
        </td>
        <% @group.lessons_from_semester_begin.group_by(&:discipline).each do |discilpine, lessons| %>
          <% lessons.group_by(&:kind_text).each do |kind, lessons| %>
            <td class='lesson_aaflwb lesson <%= lessons.first.kind %>'>
              <% last_week_lessons = lessons.select{|l| l.date_on >= Presence.last_week_begin && l.took_place? } %>
              <% attendanced_last_week_lessons = last_week_lessons.select{|l| student.attendance_on?(l)}.count %>
              <span class="percent">
                <%= last_week_lessons.any? ? "#{"%.1f" % ((attendanced_last_week_lessons.to_f/last_week_lessons.count)*100)}%" : '0.0%' %>
              </span>
              <span class="fraction">
                <%= attendanced_last_week_lessons %>/<%= last_week_lessons.count %>
              </span>
            </td>
            <td class='lesson_aafsb lesson <%= lessons.first.kind %>'>
              <% attendanced_lessons = lessons.select{|l| student.attendance_on?(l) && l.took_place? }.count %>
              <span class="percent">
                <%= "#{"%.1f" % ((attendanced_lessons.to_f/lessons.count)*100)}%" %>
              </span>
              <span class="fraction">
                <%= attendanced_lessons %>/<%= lessons.count %>
              </span>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

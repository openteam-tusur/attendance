<div class="table-responsive">
  <table class="table table-condensed table-disruptions">
    <thead>
      <tr>
        <td>Преподаватель / Дисциплина</td>
        <td>Дата</td>
        <td>Объяснительная</td>
        <td>Уважительная причина</td>
      </tr>
    </thead>
    <tbody>
      <% @disruptions.each do |realize| %>
        <tr>
          <td>
            <%= realize.lesson.discipline.title %>
            <%= " (#{realize.lesson.kind_abbr})" %>
          </td>
          <td><%= I18n.l(realize.lesson.date_on) %></td>
          <td>
            <% if realize.lecturer_declaration.present? %>
              <%= realize.lecturer_declaration.reason %>
              <%= link_to "редактировать", edit_lecturer_realize_lecturer_declaration_path(realize, realize.lecturer_declaration) %>
              <%= link_to "удалить", lecturer_realize_lecturer_declaration_path(realize, realize.lecturer_declaration), :method => :delete %>
            <% else %>
              <%= link_to "Добавить объяснительную", new_lecturer_realize_lecturer_declaration_path(realize) %>
            <% end %>
          </td>
          <td>
            <% if realize.approved.nil? %>
              -
            <% elsif realize.approved %>
              Да
            <% else %>
              Нет
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @disruptions %>
</div>

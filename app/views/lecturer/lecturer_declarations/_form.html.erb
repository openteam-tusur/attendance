<div class="modal" id="declaration" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <%= simple_form_for [:lecturer, @realize, @lecturer_declaration],
                  :html => { :class => 'form-horizontal form-declaration js-validation', :remote => true } do |f| %>

          <%= f.input :reason %>
          <%= f.submit 'Сохранить', :class => 'btn btn-primary btn-sm disabled js-submit', :disabled => true %>
          <%= link_to 'Отмена', '#', :class => 'btn btn-default btn-sm', :data => { :dismiss => :modal } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= form_tag path, :method => :get, :class => 'search_form' do %>
  <%= label_tag :starts_on, 'С' %>
  <%= text_field_tag :starts_on,
    l((params[:starts_on].try(:to_date) || Presence.last_week_begin), :format => '%d.%m.%Y'),
    :class => 'datepicker' %>
  <%= label_tag :ends_on, 'По' %>
  <%= text_field_tag :ends_on,
    l((params[:ends_on].try(:to_date) || Presence.last_week_end), :format => '%d.%m.%Y'),
    :class => 'datepicker' %>
  <%= submit_tag 'Найти' %>
<% end %>
